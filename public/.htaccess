# MIME types for fonts and static assets
AddType font/woff2 .woff2
AddType font/woff .woff
AddType image/svg+xml .svg
AddType text/javascript .js
AddType text/css .css

# Default charset for text responses
AddDefaultCharset utf-8

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# Long-term caching for immutable static assets
<IfModule mod_headers.c>
    <FilesMatch "\.(?:css|js|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# Do not emit Expires; rely on Cache-Control above
<IfModule mod_expires.c>
    ExpiresActive Off
</IfModule>

RewriteEngine On
RewriteBase /lolakocapstone2/public/

# Handle PHP files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.php [L]

# Security headers
<Files *.php>
    Header set X-Content-Type-Options nosniff
    Header set X-Frame-Options DENY
    Header set X-XSS-Protection "1; mode=block"
</Files>

# Prevent access to sensitive files
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.sql">
    Order Allow,Deny
    Deny from all
</Files>
